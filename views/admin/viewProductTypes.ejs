<head>
    <link rel="stylesheet" href="/css/adminViewProducts.css"> 
</head>
<body>
<h1>Product Types</h1>
<div class="button-container">
    <a href="/admin">
        <button>Admin Dashboard</button>
    </a>
    <a href="/admin/product-types/add"><button>Add New Product Type</button></a>
</div>
<table border="1">
    <tr>
        <th>Product Type ID</th>
        <th>Category Name</th>
        <th>Product Type Name</th>
        <th>Description</th>
    </tr>
    <% if (productTypes && productTypes.length > 0) { %>
        <% productTypes.forEach(productType => { %>
            <tr>
                <td><%= productType.ProductTypeId %></td>
                <td><%= productType.CategoryName %></td>
                <td><%= productType.ProductTypeName %></td>
                <td><%= productType.Description %></td>
                <td>
                    <a href="/admin/product-types/edit/<%= productType.ProductTypeId %>">Edit</a> | 
                    <a href="/admin/product-types/delete/<%= productType.ProductTypeId %>" onclick="return confirm('Confirm to delete Product Type?');">Delete</a>
                </td>
            </tr>
        <% }); %>
    <% } else { %>
        <tr>
            <td colspan="4">No product types found.</td>
        </tr>
    <% } %>
</table>
</body>