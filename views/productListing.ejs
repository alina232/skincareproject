<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products from <%= products[0].BrandID.BrandName %></title>
    <link rel="stylesheet" href="/css/product-listing.css">
    <link rel="stylesheet" href="/css/landing.css">
</head>
<body>
    <header>
        <div class="nav-header">
          <nav class="navbar">
            <div id="username-welcome"><p>Welcome! <span id="username"></span></p></div>
  
            <a href="#" class="hamburger-menu">
              <span class="bar"></span>
              <span class="bar"></span>
              <span class="bar"></span>
            </a>
  
            <div class="nav-links">
              <ul>
                <li><a href=""> Home</a></li>
                <li><a href=""> Categories</a></li>
                <li><a href="/brands/list"> Brands</a></li>
                <li><a href=""> Product</a></li>
                <!-- <li><a id="guest-profile" href=""> User Profile</a></li>   -->
                <!-- <li><a id="login-button" href="#" style="background-color: #D3A6F2; color: white; height: 25px">LogIn</a></li> -->
              </ul>
            </div>
           <!-- Added Search Box -->
        <div class="search-container">
          <form action="/search" method="GET">
            <input type="text" id="search-box" name="query" placeholder="Search...">
            <button type="submit" id="search-button" class="search-button">üîç</button>
          </form>
        </div>
  
        <!-- Login Button moved here -->
        <a id="login-button" href="#" style="background-color: #D3A6F2; color: white; height: 25px">LogIn</a>
          </nav>
        </div>
      </header>

    <div class="container">
        <h1 class="product-category">Products from <%= products[0].BrandID.BrandName %></h1>
        <p class="product-description">Here is a list of all the products from this brand.</p>

        <div id="product">
            <section class="section-grid">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="grid-product">
                            <img src="/images/brand-placeholder.jpg" alt="<%= product.ProductName %>" height="300px" width="300px">
                            <h3 class="product-title"><%= product.ProductName %></h3>
                            <p class="product-type"><%= product.Details %></p>
                            <a href="/products/<%= product.ProductId %>">
                                <button class="btn">View Product</button>
                            </a>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No products available for this brand.</p>
                <% } %>
            </section>
        </div>
    </div>
</body>
</html>
