<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="/css/product-listing.css">
    <link rel="stylesheet" href="/css/landing.css">
</head>
<body>
  <%- include('header') %>
    <div class="container">
      
        <div id="product">
            <section class="section-grid">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="grid-product">
                            <img src="<%= product.Image ? product.Image : '/images/brand-glossier.jpg' %>" height="300px" width="300px">
                            <h3 class="product-title"><%= product.ProductName %></h3>
                            <p class="product-type"><%= product.Details %></p>
                            <a href="/products/<%= product.ProductId %>">
                                <button class="btn">View Product</button>
                            </a>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No products Available. Restocking soon</p>
                <% } %>
            </section>
        </div>
    </div>
</body>
</html>
