<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products from <%= products[0].BrandID.BrandName %></title>
    <link rel="stylesheet" href="/css/product-listing.css">
</head>
<body>
    <header>
        <div class="nav-header">
            <nav class="navbar">
                <div id="username-welcome"><p>Welcome! <span id="username"></span></p></div>
                <a href="#" class="hamburger-menu">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </a>
                <div class="nav-links">
                    <ul>
                        <li><a href="index.html">Home</a></li>
                        <li><a href="">Products</a></li>
                        <li><a href="">Sale</a></li>
                        <li><a href="">User Profile</a></li>
                        <li><a href="#" style="background-color: #D3A6F2; color: white;">LogIn</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <h1 class="product-category">Products from <%= products[0].BrandID.BrandName %></h1>
        <p class="product-description">Here is a list of all the products from this brand.</p>

        <div id="product">
            <section class="section-grid">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="grid-product">
                            <img src="/images/brand-placeholder.jpg" alt="<%= product.ProductName %>" height="300px" width="300px">
                            <h3 class="product-title"><%= product.ProductName %></h3>
                            <p class="product-type"><%= product.Details %></p>
                            <a href="productdetail.html?productId=<%= product.ProductId %>">
                                <button class="btn">View Product Details</button>
                            </a>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No products available for this brand.</p>
                <% } %>
            </section>
        </div>
    </div>
</body>
</html>
