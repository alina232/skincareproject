<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brand Listing</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,7,8,9&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/product-listing.css"> 
</head>
<body>
  <%- include('header') %>
    <div class="container">
        <h1 class="product-category">Categories Listing</h1>
        <p class="product-description">Here is a list of all the Product Types we offer.</p>

        <div id="product">
            <section class="section-grid">
                <% if (productTypes && productTypes.length > 0) { %>
                    <% productTypes.forEach(productType => { %>
                        <div class="grid-product">
                            <img src="/images/brand-glossier.jpg" alt="<%= productType.ProductTypeName %>" height="300px" width="300px">
                            <h3 class="product-title"><%= productType.ProductTypeName %></h3>
                            <p class="product-type"><%= productType.Description %></p>
                            <a href="/product-types/<%= productType.ProductTypeId %>/products"><button id="btn-view" class="btn">View Products</button></a>


                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No Product Categories available.</p>
                <% } %>
            </section>
        </div>
    </div>
        
    </div>
</body>
</html>