<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/landing.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <title>Product Detail</title>
</head>
<body>
  <header>
    <div class="nav-header">
      <nav class="navbar">
        <div id="username-welcome"><p>Welcome! <span id="username"></span></p></div>
        <a href="#" class="hamburger-menu">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </a>
        <div class="nav-links">
          <ul>
            <li><a href="landingPage.html">Home</a></li>
            <li><a href="landingPage.html#product-newin">Products</a></li>
            <li><a href="contractor_listing.html">Contractor Listing</a></li>
            <li><a id="guest-profile" href="UserProfile.html">User Profile</a></li>  
            <li><a id="login-button" href="#">LogIn</a></li>
          </ul>
        </div>
      </nav>
    </div>
  </header>
  <div class="container my-5">
    <div class="row">
      <!-- Left side - Product Image -->
      <div class="col-md-6">
        <img src="/images/brand-glossier.jpg" alt="Product Image" class="img-fluid" height="200px">
      </div>
  
      <div class="col-md-6">
        <div class="product-details">
          <p class="fw-bold mb-3"><%= product.brand %></p>
          <p class="mb-3"><%= product.ProductName %></p>
          <p class="fw-bolder price text-danger">$<%= product.Price %></p>
          <p>
            <%= product.rating %> 
            <i class="bi bi-star-fill mx-1"></i>
            <i class="bi bi-star-fill mx-1"></i>
            <i class="bi bi-star-fill mx-1"></i>
            <i class="bi bi-star-fill mx-1"></i>
            <i class="bi bi-star-half mx-1"></i>(5)
          </p>
          <p><i class="bi bi-water mx-2 fs-4"></i><span>Extra Soft</span></p>
      
          <!-- Quantity and Add to Cart Button -->
          <div class="row d-flex flex-row font-weight-bold">
            <div class="col-md-6">
              <div class="input-group border rounded my-4">
                <button class="btn btn-outline-secondary border-0 fw-bold" type="button" id="decrease-quantity">-</button>
                <input type="text" id="quantity" class="form-control text-center border-0 fw-bold" value="1" readonly>
                <button class="btn border-0 fw-bold rounded" type="button" id="increase-quantity">+</button>
              </div>
            </div>
            <div class="col-md-6 my-3">
              <button id="add-to-cart" class="btn btn-primary mt-2">Add to Cart</button>
            </div>
          </div>
        </div>
      </div>
      </div>
  </div>
  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
  <script>
    var swiper = new Swiper(".mySwiper", {
      slidesPerView: 1,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      loop: true,
      spaceBetween: 10,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 4,
          spaceBetween: 40,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 50,
        },
      },
    });
  </script>
</body>
</html>
