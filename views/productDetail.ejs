<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/landing.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <title>Product Detail</title>
  <style>
    .review-section {
  border-top: 1px solid #ddd;
  padding-top: 20px;
}

#reviews-list .review-item {
  border-bottom: 1px solid #ddd;
  padding: 10px 0;
}

#reviews-list .review-rating {
  color: #f39c12;
  font-size: 1rem;
}

  </style>
</head>
<body>
    <header>
        <div class="nav-header">
          <nav class="navbar">
            <div id="username-welcome"><p>Welcome! <span id="username"></span></p></div>
  
            <a href="#" class="hamburger-menu">
              <span class="bar"></span>
              <span class="bar"></span>
              <span class="bar"></span>
            </a>
  
            <div class="nav-links">
              <ul>
                <li><a href=""> Home</a></li>
                <li><a href=""> Categories</a></li>
                <li><a href="/brands/list"> Brands</a></li>
                <li><a href=""> Product</a></li>
                <!-- <li><a id="guest-profile" href=""> User Profile</a></li>   -->
                <!-- <li><a id="login-button" href="#" style="background-color: #D3A6F2; color: white; height: 25px">LogIn</a></li> -->
              </ul>
            </div>
           <!-- Added Search Box -->
        <div class="search-container">
          <input type="text" id="search-box" placeholder="Search...">
          <button type="submit" id="search-button" class="search-button">üîç</button>
        </div>
  
        <!-- Login Button moved here -->
        <a id="login-button" href="#" style="background-color: #D3A6F2; color: white; height: 25px">LogIn</a>
          </nav>
        </div>
      </header>
  <div class="container my-5">
    <div class="row">
      <!-- Left side - Product Image -->
      <div class="col-md-6">
        <img src="/images/brand-glossier.jpg" alt="Product Image" class="img-fluid" height="200px">
      </div>
  
      <div class="col-md-6">
        <div class="product-details">
          <p class="fw-bold mb-3"><%= product.brand %></p>
          <p class="mb-3"><%= product.ProductName %></p>
          <p class="fw-bolder price text-danger">$<%= product.Price %></p>
          <p>
            <%= product.rating %> 
            <i class="bi bi-star-fill mx-1"></i>
            <i class="bi bi-star-fill mx-1"></i>
            <i class="bi bi-star-fill mx-1"></i>
            <i class="bi bi-star-fill mx-1"></i>
            <i class="bi bi-star-half mx-1"></i>(5)
          </p>
          <p class="mb-3"><%= product.Details %></p>
      
          <!-- Quantity and Add to Cart Button -->
          <div class="row d-flex flex-row font-weight-bold">
            <div class="col-md-6">
              <div class="input-group border rounded my-4">
                <button class="btn btn-outline-secondary border-0 fw-bold" type="button" id="decrease-quantity">-</button>
                <input type="text" id="quantity" class="form-control text-center border-0 fw-bold" value="1" readonly>
                <button class="btn border-0 fw-bold rounded" type="button" id="increase-quantity">+</button>
              </div>
            </div>
            <div class="col-md-6 my-3">
              <button id="add-to-cart" class="btn btn-primary mt-2">Add to Cart</button>
            </div>
          </div>
        </div>
        <!-- Review Section -->
<div class="review-section mt-5">
    <h5 class="fw-bold">Add a Review</h5>
    <form id="review-form" class="my-3">
      <div class="mb-3">
        <label for="review-text" class="form-label">Your Review</label>
        <textarea class="form-control" id="review-text" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
  
    <!-- Reviews List -->
    <h5 class="mt-5 fw-bold">Reviews</h5>
    <div id="reviews-list" class="mt-3">
        <% if (reviews && reviews.length === 0) { %>
            <p class="text-muted">No reviews yet. Be the first to review!</p>
        <% } else if (reviews && reviews.length > 0) { %>
            <% reviews.forEach(review => { %>
                <div class="review-item border p-3 mb-2 rounded">
                    <p class="fw-bold mb-1"><%= review.UserID || 'Anonymous' %></p>
                    <p><%= review.Review %></p>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-muted">Unable to load reviews.</p>
        <% } %>
    </div>
  </div>
      </div>
      </div>
  </div>
  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
  <script>
    var swiper = new Swiper(".mySwiper", {
      slidesPerView: 1,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
      loop: true,
      spaceBetween: 10,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 4,
          spaceBetween: 40,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 50,
        },
      },
    });
  </script>
</body>
</html>
