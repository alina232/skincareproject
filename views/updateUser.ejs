<!-- views/updateProfile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Profile</title>
    <link rel="stylesheet" type="text/css" href="/css/register.css" />
    <style>
        .container{
            display: flex;
    justify-content: center;
    align-items: center;
        }
    </style>
</head>
<body>
    <%- include('header') %>
    <div class="container">
<div class="register-container">
    <div class="register-header">
        <h1>Update Profile</h1>
    </div>

    <form class="register-form" action="/updateUser" method="POST">
        <div class="input-group">
            <label for="Firstname">First Name</label>
            <input type="text" id="Firstname" name="Firstname" value="<%= user.Firstname %>" required />
           
        </div>
        <div class="input-group">
            <label for="Lastname">Last Name</label>
            <input type="text" id="Lastname" name="Lastname" value="<%= user.Lastname %>" required/>
           
        </div>
        <div class="input-group">
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email" value="<%= user.Email %>" required/>
           
        </div>
     
        
        <div class="input-group">
            <label for="Address">Address</label>
            <input type="text" id="Address" name="Address" value="<%= user.Address %>" required/>
            
        </div>
        <div class="input-group">
            <label for="Contact">Contact</label>
            <input type="text" id="Contact" name="Contact" value="<%= user.Contact %>" required/>
           
        </div>
        <button type="submit" class="register-button">Update Profile</button>
</div>
</div>
   
</body>
</html>
